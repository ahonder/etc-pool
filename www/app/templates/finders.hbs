<div class="jumbotron">
  <div class="container">
    <strong>Blok Bulan Madenciler:</strong> <span class="label label-info">{{model.findersTotal}}</span>
  </div>
</div>
<div class="container">
  {{#if model.finders}}
  <h4>Blok Bulanlar</h4>
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <th>Madenci</th>
        <th>Bloklar</th>
      </tr>
    </thead>
    <tbody>
      {{#each model.finders as |f|}}
      <tr>
        <td>{{#link-to 'account' f.address class='hash'}}{{f.address}}{{/link-to}}</td>
        <td>{{format-number f.blocks}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{else}}
  <h3>Hen√ºz Blok Yok</h3>
  {{/if}}
</div>
